@{
    ViewData["Title"] = "News";
}

<div class="container-fluid">
    <div class="container">
       @foreach (var article in News.allNewsData)
        {
            <div class="row">
                <div class="card mb-3">
                    <div class="row no-gutters">

                        <div class="col-md-4">
                            <img src="@article.urlToImage" class="card-img"
                                 onerror="this.src='https://smallbusinessfirst.com.au/media/397512/finance-courses.jpg?width=600&height=400&mode=crop'">
                        </div>

                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="@article.url" style="color: #343a40;">
                                        @article.title
                                    </a>
                                </h5>
                                <p class="card-text">@article.description</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Published at @article.publishedAt?.ToString("dd MMMM yyyy") by @article.author
                                        
                                    </small>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        } 
    </div>
</div>